# Trading Bot Production Environment Configuration
# =============================================
# Copy this file to .env.staging or .env.production and update values

# ======================
# Environment Settings
# ======================
ENVIRONMENT=production
NODE_ENV=production
LOG_LEVEL=info

# ======================
# Container Registry
# ======================
REGISTRY_URL=ghcr.io/your-username
VERSION=latest

# ======================
# Kubernetes Configuration
# ======================
NAMESPACE=trading-bot
KUBE_CONTEXT=trading-bot-production

# ======================
# AWS Configuration
# ======================
AWS_REGION=us-east-1
EKS_CLUSTER_NAME=trading-bot-prod
AWS_ACCOUNT_ID=123456789012

# ======================
# Database Configuration
# ======================
# PostgreSQL/Supabase
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis
REDIS_PASSWORD=your-secure-redis-password

# InfluxDB
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=your-influxdb-admin-password
INFLUXDB_USER=trader
INFLUXDB_USER_PASSWORD=your-influxdb-user-password
INFLUXDB_RETENTION=30d

# ======================
# Trading API Keys
# ======================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
COINGECKO_API_KEY=your-coingecko-api-key
GROQ_API_KEY=your-groq-api-key

# ======================
# External Services
# ======================
COMPOSER_MCP_URL=https://ai.composer.trade/mcp

# ======================
# Monitoring Configuration
# ======================
# Prometheus
PROMETHEUS_RETENTION=15d
PROMETHEUS_SIZE=10GB
PROMETHEUS_EXTERNAL_URL=https://prometheus.yourdomain.com

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password
GRAFANA_ROOT_URL=https://grafana.yourdomain.com
GRAFANA_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource

# AlertManager
ALERTMANAGER_EXTERNAL_URL=https://alerts.yourdomain.com

# ======================
# Notification Configuration
# ======================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your-smtp-password
EMAIL_NOTIFICATIONS=admin@yourdomain.com

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ======================
# Security Configuration
# ======================
# JWT and Encryption
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key!!

# GPG for backup encryption
GPG_BACKUP_KEY=trading-bot-backup@yourdomain.com

# ======================
# Backup Configuration
# ======================
S3_BUCKET=your-backup-bucket
BACKUP_DIR=/opt/trading-bot-backups
RETENTION_DAYS=30

# ======================
# SSL/TLS Configuration
# ======================
TLS_CERT_PATH=/etc/ssl/certs/trading-bot.crt
TLS_KEY_PATH=/etc/ssl/private/trading-bot.key

# ======================
# Performance Tuning
# ======================
# ML Service
ML_WORKERS=4
MODEL_CACHE_SIZE=1000

# RL Service
RL_WORKERS=2
RL_TRAINING_ENABLED=false
GPU_ENABLED=false

# Backend
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000

# ======================
# Scaling Configuration
# ======================
# Auto-scaling
MIN_REPLICAS_BACKEND=3
MAX_REPLICAS_BACKEND=10
MIN_REPLICAS_ML=2
MAX_REPLICAS_ML=6

# Canary deployment
CANARY_PERCENTAGE=10

# ======================
# Feature Flags
# ======================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_HEALTH_CHECKS=true
ENABLE_DEBUG_ENDPOINTS=false

# ======================
# External Monitoring
# ======================
# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Datadog
DATADOG_API_KEY=your-datadog-api-key

# Jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ======================
# Cloud Provider Specific
# ======================
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-project-id

# Azure
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# ======================
# Load Balancer Configuration
# ======================
# AWS Load Balancer
AWS_LOAD_BALANCER_TYPE=nlb
AWS_LOAD_BALANCER_CERT_ARN=arn:aws:acm:region:account:certificate/cert-id

# ======================
# Development Overrides
# ======================
# These are only used in development environments
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS=false
ENABLE_HOT_RELOAD=false

# ======================
# Disaster Recovery
# ======================
DR_CLUSTER_ENDPOINT=https://dr-cluster.yourdomain.com
DR_REGION=us-west-2
BACKUP_FREQUENCY=daily
BACKUP_ENCRYPTION=true

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT=100

# ======================
# Cache Configuration
# ======================
CACHE_TTL=300
CACHE_MAX_SIZE=1000
REDIS_CACHE_PREFIX=trading-bot

# ======================
# Timezone and Locale
# ======================
TZ=UTC
LOCALE=en_US.UTF-8

# ======================
# Compliance and Auditing
# ======================
AUDIT_LOGS_ENABLED=true
COMPLIANCE_MODE=true
DATA_RETENTION_POLICY=90d

# ======================
# Custom Application Settings
# ======================
# Trading specific
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=America/New_York
MAX_POSITION_SIZE=10000
RISK_TOLERANCE=0.02

# ML Model settings
MODEL_UPDATE_INTERVAL=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.8
FEATURE_IMPORTANCE_THRESHOLD=0.1

# RL Training settings
TRAINING_EPISODES=1000
LEARNING_RATE=0.001
DISCOUNT_FACTOR=0.99
EXPLORATION_RATE=0.1